#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
 
 using namespace std;
int main(){
    int N ;
    cout <<" N = ";
    cin >>N;
 
    int* X = new int[N];
    for (int t = 0; t < N; t++)
     { cout << t << "= " ; 
     cin >> X[t]; 
         
}
 
    int min = 0;
    for (int i = 0; i < N; i++)
        if (X[i] < X[min]) min = i;
 
    int pos[] = { 0, 0 }, count = 0;
    for (int k = 0; (k < N) && (count < 2); k++)
    if (X[k] <= 0){ 
               pos[count] = k; count++; 
        }
 
    int sum = 0, q = pos[0]+1;
    while (q < pos[1]) sum+=X[q++];
    
    int n = 0, *new_X = new int[N];
    for (int l = 0; l < N; l++)
    if (abs(X[l]) <= 1) new_X[n++] = X[l];
 
    for (int m = 0; m < N; m++)
    if (X[m] != 1) new_X[n++] = X[m];
 
    for (int z = 0; z < N; z++)
    cout<<X[z];
 

cout<<" sum " << sum <<"  X[min] =  "<<min<< "    "<< X[min];
 
    for (int v = 0; v < N; v++)
        cout<<new_X[v];
    

    return 0;
}
